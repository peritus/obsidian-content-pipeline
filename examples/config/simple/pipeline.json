{
  "transcribe": {
    "modelConfig": "openai-whisper",
    "input": "inbox/audio",
    "output": {
      "summarize": "inbox/transcripts/{filename}-transcript.md",
      "default": "inbox/transcripts/{filename}-transcript.md"
    },
    "archive": "inbox/archive/audio",
    "include": [
      "prompts/transcriptionprompt.md"
    ],
    "description": "Transcribe audio files to text"
  },
  "summarize": {
    "modelConfig": "openai-gpt",
    "input": "inbox/transcripts",
    "output": "inbox/summaries/{filename}-summary.md",
    "archive": "inbox/archive/transcripts",
    "include": [
      "prompts/summarize-prompt.md"
    ],
    "description": "Create concise summaries of transcribed content"
  }
}