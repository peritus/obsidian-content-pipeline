{
  "transcribe": {
    "modelConfig": "openai-whisper",
    "input": "Content Pipeline/Eingang/Audio/",
    "archive": "Content Pipeline/Archiv/Audio/",
    "output": "Content Pipeline/Transkripte/{filename}.md",
    "include": [
      "Content Pipeline/Transkription-Prompt.md"
    ],
    "description": "Transkribiert Audio-Dateien zu Text.",
    "next": {
      "extract-todos": "Der naechste Schritt ist immer Todo-Extraktion aus dem Transkript."
    }
  },
  "extract-todos": {
    "modelConfig": "openai-gpt",
    "input": "Content Pipeline/Transkripte/",
    "output": "Content Pipeline/Extrahierte-Todos/{filename}.md",
    "archive": "Content Pipeline/Archiv/Transkripte/",
    "include": [
      "Content Pipeline/Todo-Extraktion-Prompt.md"
    ],
    "description": "Extrahiert einzelne Todo-Eintraege aus einem Transkript.",
    "next": {
      "summarize": "Der naechste Schritt ist immer Zusammenfassung aller Todos."
    }
  },
  "summarize": {
    "modelConfig": "openai-gpt",
    "input": "Content Pipeline/Extrahierte-Todos/",
    "output": "Content Pipeline/Zusammenfassung/",
    "archive": "Content Pipeline/Archiv/Extrahierte-Todos/",
    "include": [
      "Content Pipeline/Aufgaben-Zusammenfassen.md",
      "Content Pipeline/Zusammenfassung/Aufgaben-Liste.md"
    ],
    "description": "Fasst mehrere Todo-Extrakte zu einer konsolidierten Todo-Liste zusammen."
  }
}