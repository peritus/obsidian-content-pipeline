{
  "transcribe": {
    "modelConfig": "openai-whisper",
    "input": "Content Pipeline/Eingang-Audio/",
    "archive": "Content Pipeline/Archiv/Audio/",
    "output": "Content Pipeline/Transkripte/{filename}.md",
    "include": [
      "Content Pipeline/Prompts/Transkription-Prompt.md"
    ]
  },
  "analyze-content": {
    "modelConfig": "openai-gpt",
    "input": "Content Pipeline/Transkripte/",
    "output": {
      "extract-todos": "Content Pipeline/Text-Todos/{filename}.md",
      "create-note": "Content Pipeline/Text-Notizen/{filename}.md",
      "default": "Content Pipeline/Unklassifiziert/{filename}.md"
    },
    "archive": "Content Pipeline/Archiv/Transkripte/",
    "include": [
      "Content Pipeline/Prompts/Inhalts-Analyse-Prompt.md"
    ]
  },
  "extract-todos": {
    "modelConfig": "openai-gpt",
    "input": "Content Pipeline/Text-Todos/",
    "output": {
      "summarize": "Content Pipeline/Extrahierte-Todos/{filename}.md",
      "default": "Content Pipeline/Extrahierte-Todos/{filename}.md"
    },
    "archive": "Content Pipeline/Archiv/Text-Todos/",
    "include": [
      "Content Pipeline/Prompts/Todo-Extraktion-Prompt.md"
    ]
  },
  "create-note": {
    "modelConfig": "openai-gpt",
    "input": "Content Pipeline/Text-Notizen/",
    "output": "Content Pipeline/Notizen/{filename}.md",
    "archive": "Content Pipeline/Archiv/Text-Notizen/",
    "include": [
      "Content Pipeline/Prompts/Notiz-Erstellung-Prompt.md"
    ]
  },
  "summarize": {
    "modelConfig": "openai-gpt",
    "input": "Content Pipeline/Extrahierte-Todos/",
    "output": "Content Pipeline/Zusammenfassung/",
    "archive": "Content Pipeline/Archiv/Extrahierte-Todos/",
    "include": [
      "Content Pipeline/Prompts/Aufgaben-Zusammenfassen.md",
      "Content Pipeline/Zusammenfassung/Aufgaben-Liste.md"
    ]
  }
}