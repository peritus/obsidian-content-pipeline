{
  "name": "obsidian-audio-inbox",
  "version": "1.0.0",
  "description": "A sophisticated audio inbox management plugin for Obsidian that helps organize and process audio recordings efficiently",
  "main": "main.js",
  "scripts": {
    "build": "node esbuild.config.js",
    "build:debug": "OBSIDIAN_AUDIO_INBOX_LOGLEVEL=debug node esbuild.config.js",
    "build:info": "OBSIDIAN_AUDIO_INBOX_LOGLEVEL=info node esbuild.config.js",
    "build:warn": "OBSIDIAN_AUDIO_INBOX_LOGLEVEL=warn node esbuild.config.js",
    "build:error": "OBSIDIAN_AUDIO_INBOX_LOGLEVEL=error node esbuild.config.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "keywords": [
    "obsidian",
    "obsidian-plugin",
    "audio",
    "voice-notes",
    "recording",
    "inbox",
    "productivity",
    "note-taking",
    "audio-management",
    "workflow",
    "organization"
  ],
  "author": {
    "name": "Filip",
    "email": "your.email@example.com",
    "url": "https://github.com/yourusername"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/obsidian-audio-inbox.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/obsidian-audio-inbox/issues"
  },
  "homepage": "https://github.com/yourusername/obsidian-audio-inbox#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "main.js",
    "styles.css",
    "manifest.json",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "builtin-modules": "^5.0.0",
    "esbuild": "^0.25.5",
    "eslint": "^9.28.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "obsidian": "^1.4.16",
    "ts-jest": "^29.1.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {},
  "peerDependencies": {
    "obsidian": "^1.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/*.test.ts",
      "!src/**/*.spec.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^obsidian$": "<rootDir>/tests/__mocks__/obsidian.ts"
    },
    "testTimeout": 10000,
    "verbose": true
  }
}